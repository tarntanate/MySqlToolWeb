@model IndexViewModel
@{
	ViewData["Title"] = "MySQL Connection Tools";
}

<div class="mt-3">
	<h3>MySqL Connection Test</h3>
	<form method="post" class="form">
		<div>
			<input class="form-control" style="min-width: 300px" type="text" name="serverName" placeholder="server name" asp-for="serverName" />
		</div>
		<div>
			<input class="form-control" style="min-width: 300px" type="text" name="databaseName" placeholder="db name" asp-for="databaseName" />
		</div>
		<div>
			<input class="form-control" style="min-width: 300px" type="text" name="username" placeholder="username" asp-for="username" />
		</div>
		<div>
			<input class="form-control" style="min-width: 300px" type="password" name="password" placeholder="password" asp-for="password" />
		</div>
		<button type="submit" class="btn btn-primary">Test Connection</button>
	</form>
	<div class="mt-2">
		<span class="text-info">Connect Result: <span>@Model.result</span></span>
	</div>
</div>
